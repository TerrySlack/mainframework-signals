{
  "name": "@mainframework/signals",
  "version": "2.0.11",
  "description": "Signals library",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TerrySlack/mainframework-signals.git"
  },
  "bugs": {
    "url": "https://github.com/TerrySlack/mainframework-signals/issues"
  },
  "homepage": "https://github.com/TerrySlack/mainframework-signals#readme",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "husky": "husky",
    "clean": "rimraf dist",
    "lint": "eslint --ext 'ts,tsx' --max-warnings=0 --fix",
    "lint-staged": "lint-staged",
    "prebuild": "yarn husky && yarn clean",
    "build": "yarn prebuild && yarn build:esm",
    "build:esm": "rollup -c",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "typescript",
    "signals"
  ],
  "author": "Terry Slack",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged  && git add --all"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@mainframework/is-deep-equal": "^1.0.2",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
